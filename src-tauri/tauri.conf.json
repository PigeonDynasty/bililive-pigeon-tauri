{
  "build": {
    "beforeDevCommand": "pnpm dev",
    "beforeBuildCommand": "pnpm build",
    "devPath": "http://localhost:1420",
    "distDir": "../dist",
    "withGlobalTauri": true
  },
  "package": {
    "productName": "Bililive Pigeon",
    "version": "0.0.1"
  },
  "tauri": {
    "allowlist": {
      "all": false,
      "window": {
        "all": false,
        "close": true,
        "create": true,
        "setIgnoreCursorEvents": true,
        "setPosition": true,
        "setSize": true
      },
      "protocol": {
        "all": false,
        "asset": true,
        "assetScope": [
          "$DOCUMENT/BililivePigeon/plugins/*.js"
        ]
      },
      "http": {
        "all": false,
        "request": true,
        "scope": [
          "http://**",
          "https://**"
        ]
      }
    },
    "bundle": {
      "active": true,
      "category": "DeveloperTool",
      "copyright": "",
      "deb": {
        "depends": []
      },
      "externalBin": [],
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ],
      "identifier": "com.bililive.pigeon",
      "longDescription": "",
      "macOS": {
        "entitlements": null,
        "exceptionDomain": "i0.hdslb.com",
        "frameworks": [],
        "providerShortName": null,
        "signingIdentity": null
      },
      "resources": [],
      "shortDescription": "",
      "targets": "all",
      "windows": {
        "certificateThumbprint": null,
        "digestAlgorithm": "sha256",
        "timestampUrl": "",
        "wix": {
          "language": [
            "zh-CN",
            "en-US"
          ]
        }
      }
    },
    "security": {
      "csp": "script-src 'self' asset: https://asset.localhost"
    },
    "updater": {
      "active": true,
      "endpoints": [
        "https://github.com/PigeonDynasty/bililive-pigeon-tauri/releases/download/updater/update.json"
      ],
      "dialog": false,
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IDIxNDhFRjg2MzBGMUUzNTIKUldSUzQvRXdodTlJSVQrSmlxVi9VRFR1WWV4TFdNSEhaMW93U09YUjZHK2JwdGJHR1BENklsaEIK",
      "windows": {
        "installMode": "passive"
      }
    },
    "windows": [
      {
        "fullscreen": false,
        "width": 1152,
        "height": 648,
        "resizable": false,
        "title": "Bililive Pigeon"
      }
    ],
    "macOSPrivateApi": true
  }
}